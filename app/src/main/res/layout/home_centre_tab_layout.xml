<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_marginTop="@dimen/tab_dimens_30">

        <LinearLayout
            style="@style/MatchWrap.Horizontal"
            android:padding="@dimen/tab_dimens_20">

            <LinearLayout
                android:id="@+id/home_file_01"
                style="@style/AutoWrap.Vertical"
                onClickCommand="@{viewModel.ivHomeTabCommand}"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="云展览">

                <ImageView
                    android:layout_width="@dimen/tab_dimens_50"
                    android:layout_height="@dimen/tab_dimens_50"
                    android:src="@mipmap/city_tour_home_ic_expo" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tab_dimens_05"
                    android:gravity="center"
                    android:text="云展览"
                    android:textColor="@color/home_color_01"
                    android:textSize="@dimen/tv_size_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_file_02"
                style="@style/AutoWrap.Vertical"
                onClickCommand="@{viewModel.ivHomeTabCommand}"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="云景点">

                <ImageView
                    android:layout_width="@dimen/tab_dimens_50"
                    android:layout_height="@dimen/tab_dimens_50"
                    android:src="@mipmap/city_tour_home_ic_spot" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/tab_dimens_05"
                    android:gravity="center"
                    android:text="云景点"
                    android:textColor="@color/home_color_01"
                    android:textSize="@dimen/tv_size_13" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_file_03"
                style="@style/AutoWrap.Vertical"
                onClickCommand="@{viewModel.ivHomeTabCommand}"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="云探店">

                <ImageView
                    android:layout_width="@dimen/tab_dimens_50"
                    android:layout_height="@dimen/tab_dimens_50"
                    android:src="@mipmap/city_tour_home_ic_sport" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/tab_dimens_05"
                    android:gravity="center"
                    android:text="云探店"
                    android:textColor="@color/home_color_01"
                    android:textSize="@dimen/tv_size_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_file_04"
                style="@style/AutoWrap.Vertical"
                onClickCommand="@{viewModel.ivHomeTabCommand}"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="云购物">

                <ImageView
                    android:layout_width="@dimen/tab_dimens_50"
                    android:layout_height="@dimen/tab_dimens_50"
                    android:src="@mipmap/city_tour_home_ic_art" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/tab_dimens_05"
                    android:gravity="center"
                    android:text="云购物"
                    android:textColor="@color/home_color_01"
                    android:textSize="@dimen/tv_size_13" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap.Horizontal"
            android:paddingLeft="@dimen/tab_dimens_20"
            android:paddingRight="@dimen/tab_dimens_20"
            android:paddingBottom="@dimen/tab_dimens_20">

            <LinearLayout
                android:id="@+id/home_file_05"
                style="@style/AutoWrap.Vertical"
                onClickCommand="@{viewModel.ivHomeTabCommand}"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="守护生灵">

                <ImageView
                    android:layout_width="@dimen/tab_dimens_50"
                    android:layout_height="@dimen/tab_dimens_50"
                    android:src="@mipmap/city_tour_home_ic_lie" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/tab_dimens_05"
                    android:gravity="center"
                    android:text="守护生灵"
                    android:textColor="@color/home_color_01"
                    android:textSize="@dimen/tv_size_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_file_06"
                style="@style/AutoWrap.Vertical"
                onClickCommand="@{viewModel.ivHomeTabCommand}"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="红色足迹">

                <ImageView
                    android:layout_width="@dimen/tab_dimens_50"
                    android:layout_height="@dimen/tab_dimens_50"
                    android:src="@mipmap/city_tour_home_ic_ac" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/tab_dimens_05"
                    android:gravity="center"
                    android:text="红色足迹"
                    android:textColor="@color/home_color_01"
                    android:textSize="@dimen/tv_size_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_file_07"
                style="@style/AutoWrap.Vertical"
                onClickCommand="@{viewModel.ivHomeTabCommand}"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="节气民俗">

                <ImageView
                    android:layout_width="@dimen/tab_dimens_50"
                    android:layout_height="@dimen/tab_dimens_50"
                    android:src="@mipmap/city_tour_home_ic_night" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tab_dimens_05"
                    android:gravity="center"
                    android:text="节气民俗"
                    android:textColor="@color/home_color_01"
                    android:textSize="@dimen/tv_size_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_file_08"
                style="@style/AutoWrap.Vertical"
                onClickCommand="@{viewModel.ivHomeTabCommand}"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="姓氏宗谱">

                <ImageView
                    android:layout_width="@dimen/tab_dimens_50"
                    android:layout_height="@dimen/tab_dimens_50"
                    android:src="@mipmap/city_tour_home_ic_gst" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/tab_dimens_05"
                    android:gravity="center"
                    android:text="姓氏宗谱"
                    android:textColor="@color/home_color_01"
                    android:textSize="@dimen/tv_size_13" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <data>

        <variable
            name="viewModel"
            type="com.bp.hmi.citytour.ui.viewmodel.HomeViewModel" />
    </data>
</layout>