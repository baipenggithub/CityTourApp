<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.bp.hmi.citytour.ui.viewmodel.HomeViewModel" />
    </data>

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_margin="@dimen/tab_dimens_15">

        <RelativeLayout
            style="@style/MatchWrap.Horizontal"
            android:layout_marginTop="@dimen/tab_dimens_10"
            android:layout_marginBottom="@dimen/tab_dimens_10">

            <TextView
                android:id="@+id/tv_home_activity_title"
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/tab_dimens_10"
                android:text="视频"
                android:textColor="@color/home_color_05"
                android:textSize="@dimen/tv_size_16"
                android:textStyle="bold"
                app:drawableStartCompat="@mipmap/city_tour_home_ic_video" />

            <TextView
                style="@style/WrapWrap"
                onClickCommand="@{viewModel.ivgotoVideoCommand}"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="更多 >"
                android:textColor="@color/home_color_06"
                android:textSize="@dimen/tv_size_15" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </LinearLayout>
</layout>