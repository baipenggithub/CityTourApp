<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.bp.hmi.citytour.ui.viewmodel.HomeViewModel" />
    </data>

    <LinearLayout style="@style/MatchWrap.Vertical">

        <RelativeLayout
            style="@style/MatchWrap.Horizontal"
            android:layout_marginStart="@dimen/tab_dimens_20"
            android:layout_marginTop="@dimen/tab_dimens_20"
            android:layout_marginEnd="@dimen/tab_dimens_20"
            android:layout_marginBottom="@dimen/tab_dimens_10">

            <ImageView
                android:layout_width="@dimen/tab_dimens_20"
                android:layout_height="@dimen/tab_dimens_20"
                android:layout_centerVertical="true"
                android:src="@mipmap/city_tour_home_ic_video" />

            <TextView
                android:id="@+id/tv_home_activity_title"
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tab_dimens_35"
                android:text="视频"
                android:textColor="@color/home_color_05"
                android:textSize="@dimen/tv_size_20"
                android:textStyle="bold" />

            <TextView
                style="@style/WrapWrap"
                onClickCommand="@{viewModel.ivgotoVideoCommand}"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="更多 >"
                android:textColor="@color/home_color_06"
                android:textSize="@dimen/tv_size_15" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </LinearLayout>
</layout>