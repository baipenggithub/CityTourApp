<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp">

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:text="08:00"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginTop="8dp"
            android:text="2小时"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_path_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="148dp"
            android:text="10:00"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_path_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_path_time"
            android:layout_marginTop="8dp"
            android:text="29分钟"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rl_time">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#1F97AF" />

        <View
            android:id="@+id/start_index"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="#FBFCFE" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/base_round_30_1f97af" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#1F97AF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/base_round_30_1f97af" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#1F97AF" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/rl_ling"
        android:background="@mipmap/book_details_03">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:text="东方明珠广播电视塔方浜中路249号"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_toRightOf="@+id/iv_icon"
            android:text="方浜中路249号"
            android:textColor="#1F97AF"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:src="@mipmap/book_details_04" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_card"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="42dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/rl_ling"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_walk_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="步行76米"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_metro_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="新天地站(10号线6号出口)"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical"
            android:paddingLeft="24dp">

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/base_round_30_d7b47c" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/base_round_30_d7b47c" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_metro_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="愚园路站(10号线3号出口)"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_walk_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="步行925米"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
