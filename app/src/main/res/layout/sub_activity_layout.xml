<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.bp.hmi.citytour.ui.viewmodel.HomeViewModel" />
    </data>

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_height="@dimen/tab_dimens_300">

        <RelativeLayout
            style="@style/MatchWrap.Horizontal"
            android:layout_marginStart="@dimen/tab_dimens_20"
            android:layout_marginTop="@dimen/tab_dimens_20"
            android:layout_marginEnd="@dimen/tab_dimens_20"
            android:layout_marginBottom="@dimen/tab_dimens_10">

            <ImageView
                android:layout_width="@dimen/tab_dimens_20"
                android:layout_height="@dimen/tab_dimens_20"
                android:layout_centerVertical="true"
                android:src="@mipmap/city_tour_home_ic_activity" />

            <TextView
                android:id="@+id/tv_home_activity_title"
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tab_dimens_35"
                android:text="活动"
                android:textColor="@color/home_color_05"
                android:textSize="@dimen/tv_size_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_home_activity_sum"
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tab_dimens_06"
                android:layout_toEndOf="@+id/tv_home_activity_title"
                android:text="(10)"
                android:textColor="@color/home_color_05"
                android:textSize="@dimen/tv_size_15" />

            <TextView
                android:id="@+id/tv_activity_more"
                style="@style/WrapWrap"
                onClickCommand="@{viewModel.ivgotoActivityMoreCommand}"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="更多 >"
                android:textColor="@color/home_color_06"
                android:textSize="@dimen/tv_size_15" />
        </RelativeLayout>

        <LinearLayout
            style="@style/MatchWrap.Vertical"
            android:layout_marginStart="@dimen/tab_dimens_20"
            android:layout_marginEnd="@dimen/tab_dimens_20"
            android:background="@mipmap/home_activity_small_tab">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_home_activity_cover"
                    style="@style/MatchWrap"
                    android:layout_height="@dimen/tab_dimens_160"
                    android:scaleType="fitXY"
                    android:src="@mipmap/test_pic" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/city_tour_home_ic_new" />

            </RelativeLayout>

            <LinearLayout
                style="@style/MatchWrap.Horizontal"
                android:layout_marginStart="@dimen/tab_dimens_10"
                android:layout_marginTop="@dimen/tab_dimens_10"
                android:layout_marginEnd="@dimen/tab_dimens_10">

                <LinearLayout
                    style="@style/MatchWrap.Vertical"
                    android:layout_marginTop="@dimen/tab_dimens_10"
                    android:layout_marginEnd="@dimen/tab_dimens_10"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_home_activity_name"
                        style="@style/MatchWrap"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="千秋大业十二载,璀璨重光静安寺"
                        android:textColor="@color/home_color_07"
                        android:textSize="@dimen/tv_size_15" />

                    <TextView
                        android:id="@+id/tv_home_activity_message"
                        style="@style/MatchWrap"
                        android:layout_marginTop="@dimen/tab_dimens_05"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="穿越12个年思绪的时空隧道,回眸那四千二百个日日夜夜,真的让人感慨万千!"
                        android:textColor="@color/home_color_08"
                        android:textSize="@dimen/tv_size_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_activity_tab_bac"
                    android:orientation="vertical"
                    android:padding="@dimen/tab_dimens_05">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="静安"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/tab_dimens_03"
                        android:gravity="center_horizontal"
                        android:text="市民云"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_size_12" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>