<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/tab_dimens_150"
    android:layout_height="@dimen/tab_dimens_120"
    android:background="@mipmap/tour_home_02_01">

    <TextView
        android:id="@+id/tv_cards_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab_dimens_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="百盛购物中心百盛购物中心百盛购物中心百盛购物中心百盛购物中心百盛购物中心"
        android:textColor="@color/home_color_01"
        android:textSize="@dimen/tv_size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_cards_type" />

    <ImageView
        android:id="@+id/iv_cards_type"
        android:layout_width="@dimen/tab_dimens_145"
        android:layout_height="@dimen/tab_dimens_90"
        android:scaleType="fitXY"
        android:src="@mipmap/test_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>