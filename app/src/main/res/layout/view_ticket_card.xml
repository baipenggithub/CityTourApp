<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_frame_1_gray_round_10_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="老年票（单人）"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_size_14"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_card_rule_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老年票（单人）"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/tv_size_14"/>

        <TextView
            android:id="@+id/tv_card_rule_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="老年票（单人）"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/tv_size_14" />

        <TextView
            android:id="@+id/tv_card_rule_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:text="老年票（单人）"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/tv_size_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_card_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:text="135元"
        android:textColor="@android:color/black"
        android:textSize="@dimen/tv_size_14"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ic_card"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:src="@mipmap/ic__card_ok"
        android:visibility="gone" />
</RelativeLayout>
