<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_dimens_160"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/tab_dimens_06"
        android:layout_marginBottom="@dimen/tab_dimens_06"
        android:background="@drawable/base_frame_d8d8d8_1_round_10_white"
        android:orientation="vertical">

        <com.necer.view.RoundAngleImageView
            android:id="@+id/pathImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/tab_dimens_10"
            android:layout_weight="1"
            app:leftBottomRadius="@dimen/tab_dimens_10"
            app:leftTopRadius="@dimen/tab_dimens_10"
            app:rightBottomRadius="@dimen/tab_dimens_10"
            app:rightTopRadius="@dimen/tab_dimens_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic_1_01" />


        <TextView
            android:id="@+id/pathTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tab_dimens_10"
            android:text="四行仓库"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_16" />

        <TextView
            android:id="@+id/pathDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pathTitle"
            android:layout_marginLeft="@dimen/tab_dimens_10"
            android:layout_marginTop="@dimen/tab_dimens_04"
            android:layout_marginBottom="@dimen/tab_dimens_10"
            android:text="海兴路78号"
            android:textColor="#1E91B0"
            android:textSize="@dimen/tv_size_14" />

        <ImageView
            android:layout_width="@dimen/tab_dimens_30"
            android:layout_height="@dimen/tab_dimens_30"
            android:layout_marginTop="-36dp"
            android:layout_marginRight="@dimen/tab_dimens_10"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:src="@mipmap/book_details_04" />

    </LinearLayout>
</LinearLayout>
