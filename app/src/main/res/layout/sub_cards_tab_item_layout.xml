<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WrapMatch.Vertical"
    android:id="@+id/ll_sub_title"
    android:layout_width="@dimen/tab_dimens_90"
    android:layout_height="@dimen/tab_dimens_50">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sub_cards_tab_title"
            style="@style/WrapWrap"
            android:text="全部"
            android:textColor="@drawable/shape_sub_cards_text_color"
            android:textSize="@dimen/tv_size_16" />

        <ImageView
            android:id="@+id/iv_sub_cards_tab_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/tab_dimens_05"
            android:src="@drawable/shape_activity_type"
            android:visibility="gone" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_sub_cards_tab_title"
        style="@style/WrapWrap"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-3dp"
        android:src="@mipmap/tour_home_02_03" />

</RelativeLayout>