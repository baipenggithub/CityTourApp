<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_dimens_140"
    android:layout_marginLeft="@dimen/tab_dimens_18"
    android:layout_marginRight="@dimen/tab_dimens_18"
    android:layout_marginBottom="@dimen/tab_dimens_10"
    android:background="@mipmap/tour_home_02_01"
    android:paddingLeft="@dimen/tab_dimens_18"
    android:paddingBottom="@dimen/tab_dimens_18">

    <TextView
        android:id="@+id/tv_cards_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab_dimens_18"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="百盛购物中心百盛购物中心百盛购物中心百盛购物中心百盛购物中心百盛购物中心百盛购物中心百盛购物中心百盛购物中心百盛购物中心百盛购物中心百盛购物中心"
        android:textColor="#585657"
        android:textSize="@dimen/tv_size_16"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/tv_cards_title"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cards_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="有效时间..."
            android:textColor="@color/home_color_06"
            android:textSize="@dimen/tv_size_12" />

        <LinearLayout
            android:id="@+id/ll_remain"
            android:layout_width="@dimen/tab_dimens_230"
            android:layout_height="wrap_content">

            <TextView
                style="@style/WrapWrap"
                android:text="剩余数量"
                android:textColor="@color/home_color_06"
                android:textSize="@dimen/tv_size_12" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/tab_dimens_05"
                android:layout_marginRight="@dimen/tab_dimens_05"
                android:layout_weight="1"
                android:max="100"
                android:maxHeight="5dp"
                android:minHeight="5dp"
                android:progress="50"
                android:progressDrawable="@drawable/voice_progressbar_bg"
                android:splitTrack="false" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginRight="@dimen/tab_dimens_10"
                android:text="125/200"
                android:textColor="@color/home_color_06"
                android:textSize="@dimen/tv_size_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        style="@style/WrapWrap.Horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_cards_use"
            android:layout_width="@dimen/tab_dimens_110"
            android:layout_height="@dimen/tab_dimens_30"
            android:background="@mipmap/tour_home_02_04"
            android:gravity="center"
            android:text="立即使用"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cards_detail"
            android:layout_width="@dimen/tab_dimens_110"
            android:layout_height="@dimen/tab_dimens_30"
            android:layout_marginStart="@dimen/tab_dimens_10"
            android:background="@drawable/base_frame_4bd3dd_1_round_30_white"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="@color/home_color_10"
            android:textSize="@dimen/tv_size_16"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/tab_dimens_100"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/tab_dimens_10">

        <ImageView
            android:id="@+id/iv_cards_type"
            android:layout_width="@dimen/tab_dimens_80"
            android:layout_height="@dimen/tab_dimens_80"
            android:scaleType="centerInside"
            android:src="@mipmap/tour_home_02_06" />

        <ImageView
            android:id="@+id/iv_cards_tag"
            android:layout_width="@dimen/tab_dimens_50"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/tab_dimens_10"
            android:src="@mipmap/ic_cards_tag_1" />
    </RelativeLayout>

    <com.necer.view.RoundAngleImageView
        android:id="@+id/iv_vip"
        android:layout_width="@dimen/tab_dimens_30"
        android:layout_height="@dimen/tab_dimens_30"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/tab_dimens_03"
        android:src="@mipmap/card_vip" />
</RelativeLayout>