<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/tab_dimens_30"
        android:layout_height="@dimen/tab_dimens_30"
        android:layout_marginTop="@dimen/tab_dimens_30"
        android:layout_marginEnd="@dimen/tab_dimens_30"
        android:scaleType="centerInside"
        android:src="@mipmap/scan_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_cards_scan"
        android:layout_width="@dimen/tab_dimens_240"
        android:layout_height="@dimen/tab_dimens_240"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab_dimens_10"
        android:gravity="center_horizontal"
        android:text="请扫码使用"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_cards_scan" />


</androidx.constraintlayout.widget.ConstraintLayout>
